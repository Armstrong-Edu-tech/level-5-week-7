};

const CheckboxExample = () => {
  const [checked, setChecked] = useState(false);

  const handleChange = (event) => {
    setChecked(event.target.checked);
  };

  return (
    <div className="w-80 flex items-center space-x-3 bg-white p-4 rounded-lg shadow-md mt-6">
      <input type="checkbox" onChange={handleChange} />
      <p className="text-gray-800 font-medium">
        {checked ? "Checkbox is checked" : "Checkbox is not checked"}
      </p>
    </div>
  );
};


function App() {
  return (
    <div className="min-h-screen bg-gray-100 flex flex-col justify-center items-center py-10">
      <FormComponent />
      <TextareaExample />
      <CheckboxExample />
    </div>
  );
}

export default App;
