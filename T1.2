import React, { useState } from "react";

const FormComponent = () => {
  const [username, setUsername] = useState('');
  

  return (
    <form className="bg-white p-6 rounded-lg shadow-lg w-80"
    onSubmit={()=>alert("Your name is :"+username)}
    >
    <input 
    type="text"
    className="w-full px-4 py-2 border border-zinc-700 rounded-md text-sm placeholder-gray-500 text-black focus:outline-none focus:ring-2 focus:ring-green-500"
    placeholder="Enter your name"
    value={username}
    onChange={(e)=>setUsername(e.target.value)}
    />

    <button   className="w-full mt-4 py-2 bg-green-700 rounded-md font-semibold text-white hover:bg-green-800 transition-colors"
    type="submit">Submit</button>

    </form>
  );
};


const TextareaExample = () => {
  const [text,setText]=useState("")

  const handleChange=(e)=>{
    setText(e.target.value)
  }

  const handleSubmit=(e)=>{
    e.preventDefualt();
  }

return(
